<?xml version="1.0" encoding="UTF-8"?>
<openerp>
   <data>
   	
        <record model='ir.ui.view' id='purchase_order_form'>
			<field name='name'>purchase.order.form</field>
			<field name='model'>purchase.order</field>
			<field name='inherit_id' ref='purchase.purchase_order_form'/>
			<field name='arch' type='xml'>
                <field name="fiscal_position" position="after">
                    <field name="internal_number"/>
                </field>
            </field>
        </record>

        <record model='ir.ui.view' id='purchase_order_tree'>
			<field name='name'>purchase.order.tree</field>
			<field name='model'>purchase.order</field>
			<field name='inherit_id' ref='purchase.purchase_order_tree'/>
			<field name='arch' type='xml'>
                <field name="state" position="after">
                    <field name="internal_number"/>
                </field>
            </field>
        </record>

        <record model='ir.ui.view' id='view_purchase_order_filter'>
			<field name='name'>purchase.order.search</field>
			<field name='model'>purchase.order</field>
			<field name='inherit_id' ref='purchase.view_purchase_order_filter'/>
			<field name='arch' type='xml'>
                <field name="name" position="replace">
                    <field name="name" string="Référence" filter_domain="['|',('name','ilike',self),('internal_number','ilike',self)]"/>
                </field>
            </field>
        </record>

	</data>
</openerp>
